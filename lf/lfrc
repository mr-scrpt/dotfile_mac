cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd drag-and-drop &dragon-drop -a -x $fx --end-exit

cmd openFileWithVim ${{
  nvim $f;
}}

cmd openFolderWithVim ${{
  nvim .;
}}


