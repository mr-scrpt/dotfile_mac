cmd moveto ${{
	clear
	tput cup $(($(tput lines)/3))
	tput bold
	set -f

	clear
	echo "Move to where?"

	# Ð˜ÑÐ¿Ð¾Ð»ÑŒÐ·ÑƒÐ¹Ñ‚Ðµ fzf Ð´Ð»Ñ Ð²Ñ‹Ð±Ð¾Ñ€Ð° Ñ†ÐµÐ»ÐµÐ²Ð¾Ð¹ Ð´Ð¸Ñ€ÐµÐºÑ‚Ð¾Ñ€Ð¸Ð¸
	dest="$(fzf --prompt='Move to: ' --preview='ls {}' | sed 's|~|$HOME|')"

	if [ -n "$dest" ]; then
		# ÐŸÐµÑ€ÐµÐ¼ÐµÑ‰ÐµÐ½Ð¸Ðµ Ñ„Ð°Ð¹Ð»Ð¾Ð² Ð² Ð²Ñ‹Ð±Ñ€Ð°Ð½Ð½ÑƒÑŽ Ð´Ð¸Ñ€ÐµÐºÑ‚Ð¾Ñ€Ð¸ÑŽ
		for x in $fx; do
			eval mv -iv "$x" "$dest"
		done

		# Ð’Ñ‹Ð²Ð¾Ð´ ÑƒÐ²ÐµÐ´Ð¾Ð¼Ð»ÐµÐ½Ð¸Ñ Ð¾Ð± ÑƒÑÐ¿ÐµÑˆÐ½Ð¾Ð¼ Ð¿ÐµÑ€ÐµÐ¼ÐµÑ‰ÐµÐ½Ð¸Ð¸
		osascript -e 'display notification "ðŸšš File(s) moved." with title "File(s) moved to '"$dest"'"'
	else
		# Ð’Ñ‹Ð²Ð¾Ð´ ÑƒÐ²ÐµÐ´Ð¾Ð¼Ð»ÐµÐ½Ð¸Ñ Ð¾Ð± Ð¾Ñ‚Ð¼ÐµÐ½Ðµ Ð¾Ð¿ÐµÑ€Ð°Ñ†Ð¸Ð¸
		osascript -e 'display notification "ðŸš« Operation canceled." with title "Move operation"'
	fi
}}

